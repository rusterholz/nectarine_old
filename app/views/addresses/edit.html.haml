.row
  .col-xs-6.col-sm-6.col-md-6.col-lg-6
    %h1
      Addresses
      %small= nbsp( "Editing Address #{address_id( @address )}" )
  .col-xs-6.col-sm-6.col-md-6.col-lg-6.text-right
    .btn-group.btn-group-lg
      = link_to( @address, class: 'btn btn-default btn-large', style: 'margin-top: 20px; margin-bottom: 10px;' ) do
        = font_awesome( 'eye' )
      = link_to( addresses_path, class: 'btn btn-default btn-large', style: 'margin-top: 20px; margin-bottom: 10px;' ) do
        = font_awesome( 'list' )
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    = render 'form'
